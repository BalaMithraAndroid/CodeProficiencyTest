<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/cv_layout"
    android:layout_marginRight="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/lv_row_padding"
        android:id="@+id/rl_layout"
        >
        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lv_row_text_size"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:text="cjnndj"

            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/img_pic"
            />
        <TextView
            android:id="@+id/sub_title"
            android:layout_below="@+id/head_title"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lv_description_size"
            android:textColor="@android:color/black"
            android:layout_toLeftOf="@id/img_pic"
            android:gravity="center_vertical"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_title"
            android:layout_toLeftOf="@id/image1" />g
        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>